/* pages/dashboard/dashboard.wxss */

.dashboard-content {
  box-sizing: border-box;
  padding: 8px;
  display: flex;
  flex-direction: column;
  height: auto;
}

.divider-v {
  margin: 0 8px;
  width: 0;
  border-left: 1px dashed var(--juejin-gray-2);
}

.dashboard-item {
  display: flex;
  padding: 8px;
  border-radius: 4px;
  overflow: hidden;
  background-color: #fff;
}

.dashboard-item+.dashboard-item {
  margin-top: 8px;
}

.dashboard-item_title {
  height: 32px;
}
.dashboard-item_content {
  flex: 1;
}

.user-cover {
  width: 80px;
  display: flex;
  align-items: center;
}

.right-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.user-cover image {
  width: 80px;
  height: 80px;
}

.user-name {
  font-size: 20px;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 4px;
}

.user-tags {
  display: flex;
  gap: 8px;
  font-size: 14px;
  color: var(--juejin-font-2)
}

.user-desc {
  font-size: 14px;
  color: var(--juejin-font-3)
}

.creator-lv-tag {
  width: 35px;
  height: 16px;
  background-size: contain;
}

.vip-lv-tag {
  width: 16px;
  height: 16px;
  background-size: contain;
}

.user-counters {
  display: flex;
  justify-content: space-between;
}

.counter-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.counter-item-label {
  font-size: 14px;
  font-weight: 700;
  color: var(--juejin-font-1)
}

.counter-item-value {
  font-size: 14px;
  font-weight: 700;
  color: var(--juejin-font-2)
}


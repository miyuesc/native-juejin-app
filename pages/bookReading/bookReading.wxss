.reading-page {
    overflow: hidden;
}
.section-content {
    flex: 1;
    overflow-y: auto;
    padding: 0 8px;
}
.tabbar {
    display: flex;
    width: 100%;
    justify-content: space-around;
    padding-bottom: 10px;
    border-top: 1px solid #eee;
}
.tabbar .tabbar-btn {
    width: 20%;
    height: 54px;
    line-height: 40px;
    text-align: center;
}
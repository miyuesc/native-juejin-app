.page-content {
	width: 100%;
	flex: 1;
	display: flex;
	flex-direction: column;
	height: 100vh;
}

.preview-wrapper {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.preview-wrapper movable-area,
.preview-wrapper movable-view {
	width: 94vw;
	height: 94vh;
}
.overlay-img {
	max-width: 94vw;
	max-height: 94vh;
	overflow: hidden;
}

view._root,
view._root text {
	font-family: 'Pingfang SC', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
}
view._span {
	box-sizing: border-box;
}
._span.title-1,
._span.title-2,
._span.title-3,
._span.title-4 {
	font-weight: 700;
	padding: 8px 0;
}
._span.title-1 {
	font-size: 18px;
}
._span.title-2 {
	font-size: 16px;
}
._span.title-3 {
	font-size: 14px;
}
._span.title-4 {
	font-size: 12px;
}

._span._p {
	padding: 8px 0;
}

._span.ul-list,
._span.ol-list {
	padding: 8px 0;
	display: flex;
	flex-direction: column;
}
._span.list-item {
	width: 100%;
	padding: 2px 0 2px 10px;
}
._span.ul-list ._span.list-item::before {
	content: 'â—‰';
	padding-right: 8px;
}
._span.ol-list {
	counter-reset: ol-counter;
}
._span.ol-list ._span.list-item::before {
	padding-right: 8px;
	counter-increment: ol-counter;
	content: counter(ol-counter) ".";
}

._span._blockquote {
	padding: 8px 0 8px 20px;
	border-left: 4px solid #ccc;
	background-color: #eee;
}

._code text {
	font-family: 'Pingfang SC', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
	color: rgb(108, 40, 171);
	font-style: italic;
}
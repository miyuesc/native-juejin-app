page {
	width: 100%;
	min-height: 100%;
	display: flex;
}

.page-content {
	width: 100%;
	flex: 1;
	display: flex;
	flex-direction: column;
	height: 100vh;
}

.preview-wrapper {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.preview-wrapper movable-area,
.preview-wrapper movable-view {
	width: 94vw;
	height: 94vh;
}

.overlay-img {
	max-width: 94vw;
	max-height: 94vh;
	overflow: hidden;
}

view._root,
view._root text {
	font-family: 'Pingfang SC', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
}

view._span {
	box-sizing: border-box;
}

._span.title-1,
._span.title-2,
._span.title-3,
._span.title-4,
._span.heading {
	display: flex;
	font-weight: 700;
	margin: 8px 0;
	border-bottom: 1px dashed #eee;
}

._span.title-1,
._span.title-2,
._span.heading {
	font-size: 18px;
}

._span.title-3,
._span.title-4 {
	font-size: 16px;
}

._span._p {
	padding: 8px 0;
	font-size: 14px;
}

._span.ul-list,
._span.ol-list {
	padding: 8px 0;
	display: flex;
	flex-direction: column;
}

._span.list-item {
	width: 100%;
	font-size: 14px;
	padding: 2px 0 2px 10px;
}

._span.ul-list ._span.list-item::before {
	content: 'â—‰';
	padding-right: 8px;
}

._span.ol-list {
	counter-reset: ol-counter;
}

._span.ol-list ._span.list-item::before {
	padding-right: 8px;
	counter-increment: ol-counter;
	content: counter(ol-counter) ".";
}

._blockquote {
	padding: 8px 0 8px 20px;
	border-left: 4px solid #ece;
	background-color: #efefef;
}

view._code,
text._code {
	font-family: 'Pingfang SC', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
	font-size: 14px;
	background-color: #fff5f5;
	color: #ff502c;
	font-style: italic;
	border-radius: 2px;
	padding: 0 6px;
}

._code view.hljs-comment {
	display: flex;
	color: #c3c3c3;
}

view._pre>._code {
	display: block;
	padding: 4px;
	background: #f8f8f8;
}